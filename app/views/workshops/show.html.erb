<% if @workshop != nil %>
  <%= @workshop.name %><br>
  <% if @workshop.joined?(current_user) %>
    すでに参加してるよ
    <%= form_for :post, url: workshop_post_path(@workshop) do |f| %>
      <%= f.text_field :content %>
      <%= f.submit "投稿" %>
    <% end %>
  <% else %>
    <%= link_to "Join!!", create_user_workshop_path(@workshop), method: :post %><br>
  <% end %>
  <% @workshop.posts.each do |post| %>
    <%= post.content %>
  <% end %>
  誰でもゾーン
<% else %>
  No workshop
<% end %>
